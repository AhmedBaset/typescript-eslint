{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // disable composite and emitDeclarationOnly for docusaurus usage
    "composite": false,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@site/*": ["./*"]
    },
    "types": ["@docusaurus/module-type-aliases", "@docusaurus/theme-classic"]
  },
  "include": [
    "src",
    "tests",
    "tools",
    "plugins",
    "typings",
    "sidebars/*.js",
    "./*.mts",
    "./*.ts"
  ],
  "references": [
    {
      "path": "../rule-schema-to-typescript-types/tsconfig.build.json"
    }
  ]
}
